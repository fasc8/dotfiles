[theme]
theme = "slick"

[icons]
icons = "awesome5"

[icons.overrides]
cpu = "💤 "
memory_mem = "📦"
net_up = "📤"
net_down = "📥"
time = "🕑"
cogs = "⚙️ "
net_wired = "🌎"
disk_drive = "💾"

[[block]]
block = "disk_space"
path = "/"
info_type = "available"
format = " $icon $available "
alert_unit = "GB"
interval = 20

[[block]]
block = "memory"
format = " $mem_used ($mem_used_percents) "
format_alt = " $swap_used/$swap_total($swap_used_percents) "
interval = 30
warning_mem = 70
critical_mem = 90

[[block]]
block = "cpu"
interval = 1
format = " $utilization "

[[block]]
block = "load"
interval = 1
format = " $1m "

[[block]]
block = "net"
device = "ens33"
interval = 5
format = " $ip $speed_down.eng(prefix:K) $speed_up.eng(prefix:K) "

[[block]]
block = "time"
interval = 1
format = " $timestamp.datetime(f:'%a %d/%m %R:%S', l:de_DE) "
timezone = "Europe/Berlin"
